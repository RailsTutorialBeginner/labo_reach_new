<li id="event-<%= event.id %>">
  <%= link_to gravatar_for(event.school, size: 50), event.school %>
  <span class="school"><%= link_to event.school.name, event.school %></span>
  <span class="content">
    <%= event.content %>
    <%= image_tag event.picture.url if event.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(event.created_at) %> ago.
  </span>
</li>
