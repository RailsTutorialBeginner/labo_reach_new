<div class="chat-room-wrapper">
  <% if student_logged_in? %>
    <h3 class="h1-design"><%= @school.name %>とのチャットルーム</h3>
    <div class="chat-field student-field">
      <div class="messages">
        <% @messages.each do |message| %>
          <!-- メッセージがUserによるものだったら -->
          <% if message.is_student %>
          <!-- メッセージを右に寄せる -->
          <div class="message student-message" data-id=<%= message.id %>>
            <div class="message-box">
              <div class="message-content">
                <div class="message-text">
                  <%= message.content %>
                </div>
              </div>
            </div>
          </div>
          <div class="clear"></div>
          <!-- メッセージがShopによるものだったら -->
          <% else %>
          <!-- メッセージを左に寄せる -->
          <div class="message school-message" data-id=<%= message.id %>>
            <div class="message-box">
              <div class="message-content">
                <div class="message-text">
                  <%= message.content %>
                </div>
              </div>
            </div>
          </div>
          <div class="clear"></div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% elsif school_logged_in? %>
    <h3 class="h1-design"><%= @student.name %>とのチャットルーム</h3>
    <div class="chat-field school-field">
      <div class="messages">
        <% @messages.each do |message| %>
          <!-- メッセージがUserによるものだったら -->
          <% if message.is_student %>
          <!-- メッセージを左に寄せる -->
          <div class="message student-message" data-id=<%= message.id %>>
            <div class="message-box">
              <div class="message-content">
                <div class="message-text">
                  <%= message.content %>
                </div>
              </div>
            </div>
          </div>
          <div class="clear"></div>
          <!-- メッセージがShopによるものだったら -->
          <% else %>
          <!-- メッセージを右に寄せる -->
          <div class="message school-message" data-id=<%= message.id %>>
            <div class="message-box">
              <div class="message-content">
                <div class="message-text">
                  <%= message.content %>
                </div>
              </div>
            </div>
          </div>
          <div class="clear"></div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= form_for [@room, @message], id: "new_message" do |f| %>
    <%= f.text_field :content, id: "message_content", class: "message_content" %>
    <%= f.submit "メッセージを送る", class: "submit-btn" %>
  <% end %>
</div>
