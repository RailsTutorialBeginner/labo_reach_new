<% provide(:title, "Edit user") %>
<h1 class="h1-design">プロフィールを変更</h1>

<div class="row student-update">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@student) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation", class: "label" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "変更を保存", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @student %>
      <a href="http://gravatar.com/emails" target="_blank">画像を変更する</a>
    </div>
  </div>
</div>
